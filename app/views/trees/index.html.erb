<p style="color: green"><%= notice %></p>



<button type="button" class="btn btn-outline-primary"><%= link_to "New Tree", new_tree_path %> </button>
<button type="button" class="btn btn-outline-primary">
  <%= link_to "Add New Student", teacher_new_student_path(current_teacher) %>
</button>






<div class="container">
  <h1>Trees</h1>
    <div class="container">
      <div class="row">
        <div class="col">
          <% @trees.each do |tree| %>
            <%= render tree %>
    </div>
      <div class="col-6">
        <%= link_to "Go to tree", tree_path(tree), class: "btn btn-outline-primary" %>
        <%= button_to "Delete tree", tree_path(tree), method: :delete, data: { confirm: "Are you sure you want to delete this tree?" }, class: "btn btn-outline-danger" %>
          <% if flash[:warning] %>
            <div class="alert alert-warning">
              <%= flash[:warning] %>
            </div>
          <% end %>

          <% if flash[:success] %>
            <div class="alert alert-success">
              <%= flash[:success] %>
            </div>
          <% end %>
        
      </div>
          <% end %>

<% if teacher_signed_in? %>
  <!-- User is logged in -->
  <p>Welcome, <%= current_teacher.email %></p>
<% else %>
  <!-- User is not logged in -->
  <p>Please sign in to continue</p>
<% end %>